<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/wooden_background_11">


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:orientation="vertical" >


        <ImageView
            android:id="@+id/categories"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/categories"
            android:contentDescription="test"
            android:onClick="displayCategories"
            />

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="@string/lbl_category_entries"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/categoryEditor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/settings_4"
            android:contentDescription="test"
            android:layout_below="@id/categoryTitle"
            android:onClick="openCategoryList"
            />

        <TextView
            android:id="@+id/categoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="@string/lbl_categories"
            android:layout_below="@id/categoryEditor"
            />
    </LinearLayout>

</LinearLayout>
